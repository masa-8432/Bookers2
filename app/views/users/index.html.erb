<div class="container">
  <div class="row">

    <%= render 'users/userinfo', user: current_user %>

    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover" style="table-layout:fixed;">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th clospan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50"%></td>
            <td><%= user.name %></td>
            <td><%=link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>