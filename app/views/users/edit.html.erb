<div class="container">

<% if @user.errors.any? %>
    <p><%= @user.errors.count %>件のerrorが発生しました</p>
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>


<h2>User info</h2>

<%= form_with model:@user, local:true do |f| %>
<label>Name</label></br>
<%= f.text_field :name %></br>
<label>Image</label></br>
<%= f.attachment_field :profile_image %></br>
<label>Introduction</label></br>
<%= f.text_area :introduction %></br>

<%= f.submit 'Update User' %>

<% end %>

</div>