<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <div class="header" >
      <nav class="navbar navbar-inverse navbar-static-top" style="background-color:black">
　　　　<div class="container">
          <div id="slidemenu">
            <div class="nav navbar-nav navbar-left" >Bookers</div>

            <ul class="nav navbar-nav navbar-right" >
            <% if user_signed_in? %>

              <li class="">
                <%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to users_path do %>
                <span class="glyphicon glyphicon-user"aria-hidden="true">Users</span>
                <% end %>
              </li>
              <li class="">
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true">Books</span>
              <% end %>
              </li>
              <li class "">
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true">logout</span>
              <% end %>
              </li>
            <% else %>
              <li class="">
              <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
              <% end %>
              </li>
              <li class="">
              <%= link_to home_about_path do %>
              <span class="glyphicon glyphicon-link" aria-hidden>About</span>
              <% end %>
              </li>
              <li class="">
              <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit" aria-hidden>sign up</span>
              <% end %>
              </li>
              <li class="">
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden>login</span>
              <% end %>
              </li>
            <% end %>
            </ul>
           </div>
          </div>
        </div>
      </nav>
    </div>

    <!--フラッシュメッセージ-->
    <div class="container">
    <p class="notice"><%= notice %></p>
    </div>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row"></div>
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>


</html>
