
<div class="container">
  <div class="row">

    <%= render 'users/userinfo', user: @book.user %>

    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-hover" style="table-layout:fixed;">
        <tbody>
          <tr>
            <td>
              <div class="name" >
                <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "50x50"%></br>
                <%= @book.user.name %>
                <% end %>
              </div>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <!--本人のみ-->
            <% if @book.user == current_user %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id),method: :delete, class:"btn btn-danger",
              "data-confirm" => "本当に消しますか？" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>






