<div class ="container">
  <div class ="row">
    <div class ="col-xs-8 col-xs-offset-2">

<%= form_with model: @book, local:true do |f| %>

  <% if @book.errors.any? %>
    <p><%= @book.errors.count %>件のerrorが発生しました</p>
    <% @book.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>

<h2>Editing Book</h2>
<p>Title</p>
<%= f.text_field :title %>
<p>Option</p>
<%= f.text_area :body %></br>
<%= f.submit 'Update Book', class: "btn btn-primary " %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>